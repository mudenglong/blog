{# {% extends 'RedwoodWebBundle::beforeLayout.html.twig' %} #}

{% extends 'RedwoodWebBundle::webLayout.html.twig' %}

{% block title %}  
登 录
{% endblock %}
{% block wrapBox %}

<form id="login-form" class="form-horizontal" method="post" action="{{ path('login_check') }}" style="width: 60%; margin: 0 auto; ">

    {% if error %}
      <div>{{ error.message }}</div>
    {% endif %}


    <div class="form-group">
        <label class="col-md-2 control-label" for="login_username">用户名</label>

        <div class="col-md-7 controls">
            <input id="login_username" class="form-control" type="text" name="_username" value="{{ last_username }}" />

            <div class="help-block" style="display:none;"></div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="login_password">密码</label>

        <div class="col-md-7 controls">

            <input id="login_password" class="form-control" type="password" name="_password" />

            <div class="help-block" style="display:none;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <span>
                <label> 
                    {# <input type="checkbox" name="_remember_me" checked="checked"> 记住密码  #}
                    <input type="checkbox" name="_remember_me" checked="checked"> 记住密码 
                </label>
            </span>
            <a href="{{ path('password_reset') }}">找回密码</a>

            <input type="hidden" name="_target_path" value="{{ path('jswidget_show') }}" />

            {#
            <input type="hidden" name="_target_path" value="{{ path('note_inbox_show') }}" />
            #}

            {#  {% if app.request.query.get('to') %}
            <input type="hidden" name="_target_path" value="{{ app.request.query.get('to') }}" />
            {% endif %} #}
            <button type="submit" >登录</button>
        </div>
    </div>

</form>

{% endblock %}

