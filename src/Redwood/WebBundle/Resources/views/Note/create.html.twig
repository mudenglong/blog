{% extends 'RedwoodWebBundle::layout.html.twig' %}

{% block title %}Inbox - {{ parent() }}{% endblock %}
{% set nav = 'notes' %}
{% set script_controller = 'note/create' %}

{% block rightBox %} 
    <h2>我要新建</h2>
    <form id="noteForm" method="POST" action="{{ path('note_create') }}">
        {{ form_widget(form.title, {attr:{'data-display':'title'}}) }}

        {{ form_widget(form.content, {attr:{style:'width:700px;height:200px;','data-display':'内容'}}) }}

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-primary btn-fat">保存</button>


       
    </form>
{% endblock %}